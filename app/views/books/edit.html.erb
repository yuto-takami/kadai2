<!DOCTYPE html>
<html>
  <head>
  </head>

  <body>
    <% if flash[:notice] %>
      <p><%= flash[:notice] %></p>
    <% end %>
    <h1>Editing Book</h1>
    <%= form_with model:@book, local: true do |f| %>
      <h4>タイトル</h4>
      <%= f.text_field :title %>
      <h4>本文</h4>
      <%= f.text_area :body %>
      <%= f.submit 'update book' %>
    <% end %>

    <%= link_to "Show", book_path(@book.id) %>
    |
    <a href = "/books" >Back</a>
  </body>

</html>
